<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageViewWaffleItem"
        android:layout_width="141dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_icecream_24" />

    <TextView
        android:id="@+id/textViewWaffleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewWaffleItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewWaffleItem" />

    <TextView
        android:id="@+id/textViewWafflePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewWaffleName"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/textViewWaffleName"
        app:layout_constraintTop_toBottomOf="@+id/textViewWaffleName" />

</androidx.constraintlayout.widget.ConstraintLayout>